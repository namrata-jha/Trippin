<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DrivingModeFragment"
    android:padding="12dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:text="Click the toggle icon to toggle DRIVING mode"
            android:textAlignment="center"
            android:textColor="#66000000"
            android:textSize="18sp" />

        <ToggleButton
            android:layout_marginTop="8dp"
            android:layout_below="@id/instruction"
            android:id="@+id/dndtoggle"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/check"
            android:textOn=""
            android:textOff=""
            />


        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:text="Driving mode disabled"
            android:textSize="22sp"
            tools:textColor="@android:color/black" />
        <TextView
            android:id="@+id/di"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/dndtoggle"
            android:textSize="25sp"
            android:text="Danger Index  : "
            android:layout_marginBottom="40dp"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/di"
            android:layout_below="@id/dndtoggle"
            android:id="@+id/my_index"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:text=""
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="@color/colorPrimaryDark"
        app:srcCompat="@drawable/ic_person_add_black_24dp" />

</RelativeLayout>